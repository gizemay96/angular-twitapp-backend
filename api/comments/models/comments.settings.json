{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "name": "comments"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "text": {
      "type": "text"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "comments"
    },
    "post": {
      "via": "comments",
      "model": "posts"
    },
    "likeCount": {
      "type": "integer",
      "default": 0
    },
    "retweetCount": {
      "type": "integer",
      "default": 0
    }
  }
}
